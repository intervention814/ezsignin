<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="signin.ez.ezsignin.SummaryActivity">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:id="@+id/summaryTable">
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="Total Records: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalRecords"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="% Medicare: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalPctMedicare"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="% Social Security: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalPctSocialSecurity"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="% Food Stamps: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalPctSocialFoodStamps"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="% TANF: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalPctTANF"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal"
            android:padding="3dp">
            <TextView
                android:text="% Income Eligile: "
                android:textStyle="bold"/>
            <TextView
                android:text="placeholder"
                android:id="@+id/summaryTotalPctIncomeEligible"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Records"
                android:id="@+id/buttonSaveRecords"
                android:onClick="onSaveRecordsClick"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"/>
        </TableRow>
        <TableRow
            android:gravity="center_horizontal">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email Records"
                android:enabled="false"
                android:id="@+id/buttonEmailRecords"
                android:onClick="onEmailRecordsClick"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
